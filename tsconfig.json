{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "Node16",
    "module": "Node16",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@validators/*": [
        "./validators/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@requests/*": [
        "./requests/*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@errors/*": [
        "./errors/*"
      ],
      "@prisma-model/*": [
        "./prisma/*"
      ]
    },
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    // "seed.ts",
  ],
  "include": [
    "src",
    "ts"
  ]
}