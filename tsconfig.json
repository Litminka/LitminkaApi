{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "Node16",
    "module": "Node16",
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@validators/*": [
        "src/validators/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@requests/*": [
        "src/requests/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      "@prisma-model/*": [
        "src/prisma/*"
      ],
      "@tests/*": [
        "   tests/*"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "ts",
    "tests"
  ]
}